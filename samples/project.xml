<?xml version="1.0"?>
<project>
    <extend>${basedir}/../mule/project.xml</extend>
    <name>Mule Samples</name>
    <id>mule-samples</id>
    <groupId>mule</groupId>
    <dependencies>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-core</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-jms-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/jms/</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-email-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/email/</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-file-provider</artifactId>
           <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/file/</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-vm-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/vm/</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-http-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/http/</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-stream-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/stream/</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-soap-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org/providers/soap/</url>
            <properties>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-extras-spring</artifactId>
            <version>${pom.currentVersion}</version>
            <!-- Mule core jars are ignored and spring will be distributed with the extras so ignore it here -->
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-extras-client</artifactId>
            <version>${pom.currentVersion}</version>
            <!-- Mule core jars are ignored and spring will be distributed with the extras so ignore it here -->
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>spring</artifactId>
            <groupId>springframework</groupId>
            <version>${spring_version}</version>
            <url>http://www.springframework.org</url>
        </dependency>
        <dependency>
            <groupId>geronimo-spec</groupId>
            <artifactId>geronimo-spec-servlet</artifactId>
            <version>${geronimo_spec_servlet_version}</version>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <mule.mini>false</mule.mini>
                <rar.bundle>true</rar.bundle>
                <war.bundle>false</war.bundle>
            </properties>
        </dependency>
  </dependencies>
    <build>
        <sourceDirectory>.</sourceDirectory>
        <unitTestSourceDirectory>hello/src/test</unitTestSourceDirectory>
        <unitTestSourceDirectory>errorhandler/src/test</unitTestSourceDirectory>
        <unitTest>
<!--            <includes>-->
<!--                <include>**/*TestCase.java</include>-->
<!--            </includes>-->
            <excludes>
                <exclude>**/Abstract*.java</exclude>
                <exclude>**/*TestCase.java</exclude>
            </excludes>
        </unitTest>
        <resources>
            <includes>
                <include>${basedir}/../LICENSE.txt</include>
            </includes>
        </resources>
    </build>
</project>
