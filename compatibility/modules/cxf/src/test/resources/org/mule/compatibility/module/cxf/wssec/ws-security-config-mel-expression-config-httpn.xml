<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf"
      xmlns:httpn="http://www.mulesoft.org/schema/mule/httpn"
      xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
       http://www.mulesoft.org/schema/mule/httpn http://www.mulesoft.org/schema/mule/httpn/current/mule-httpn.xsd

       http://www.mulesoft.org/schema/mule/cxf http://www.mulesoft.org/schema/mule/cxf/current/mule-cxf.xsd">

    <spring:bean name="usernameTokenValidator" class="org.mule.compatibility.module.cxf.wssec.UsernameTokenTestValidator"/>

    <httpn:listener-config name="listenerConfig">
        <httpn:listener-connection host="localhost" port="${port1}"/>
    </httpn:listener-config>

    <httpn:request-config name="requestConfig">
        <httpn:request-connection host="localhost" port="${port1}"/>
    </httpn:request-config>

    <flow name="cxfClient">
        <set-variable variableName="originalPayload" value="#[mel:message.payload]" />
        <cxf:jaxws-client clientClass="org.apache.hello_world_soap_http.SOAPService" port="SoapPort"
                          wsdlLocation="classpath:/wsdl/hello_world.wsdl" operation="greetMe">
            <cxf:ws-security>
                <cxf:ws-config>
                    <cxf:property key="action" value="UsernameToken"/>
                    <cxf:property key="user" value="joe"/>
                    <cxf:property key="passwordType" value="#[mel:originalPayload]"/>
                    <cxf:property key="passwordCallbackClass" value="org.mule.compatibility.module.cxf.wssec.ClientPasswordCallback"/>
                </cxf:ws-config>
            </cxf:ws-security>
        </cxf:jaxws-client>
        <httpn:request path="services/greeter" method="POST" config-ref="requestConfig"/>
    </flow>

    <flow name="greeterService">
        <httpn:listener path="services/greeter" config-ref="listenerConfig"/>
        <cxf:jaxws-service serviceClass="org.mule.compatibility.module.cxf.wssec.GreeterWithLatch">
            <cxf:ws-security>
                <cxf:ws-config>
                    <cxf:property key="action" value="UsernameToken"/>
                </cxf:ws-config>
                <cxf:ws-custom-validator>
                    <cxf:username-token-validator ref="usernameTokenValidator" />
                </cxf:ws-custom-validator>
            </cxf:ws-security>
        </cxf:jaxws-service>
        <component>
            <singleton-object class="org.mule.compatibility.module.cxf.wssec.GreeterWithLatch"/>
        </component>
    </flow>

</mule>
