<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.codehaus.mule</groupId>
        <artifactId>mule-extras</artifactId>
        <version>2.0-SNAPSHOT</version>
    </parent>
    <artifactId>mule-extras-acegi</artifactId>
    <packaging>jar</packaging>
    <name>Acegi Security</name>
    <description>Mule Acegi Support exposes Acegi Authentication providers and Method interceptors to authentication event traffic via endpoints and method level authorisation on components.</description>   
    <dependencies>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-http-provider</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-extras-spring</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>acegisecurity</groupId>
            <artifactId>acegi-security</artifactId>
            <version>0.7.0</version>
            <exclusions>
                <exclusion>
                    <!-- Acegi 0.7.0 will try to pull an older Spring 1.1.3 and fail the test -->
                    <groupId>springframework</groupId>
                    <artifactId>spring-core</artifactId>
                </exclusion>
            </exclusions>
                
        </dependency>

        <!-- For unit tests only -->
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-extras-client</artifactId>
            <version>${version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.codehaus.mule</groupId>
            <artifactId>mule-vm-provider</artifactId>
            <version>${version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
