<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>${basedir}/../project.xml</extend>
    <groupId>mule</groupId>
    <id>mule-extras-spring</id>
    <artifactId>mule-extras-spring</artifactId>
    <name>Spring Extensions</name>
    <shortDescription>spring</shortDescription>
    <description>Provides extensions to use the Spring framework with Mule such as utilising the the spring container to build components managed by Mule. for more information see <a href="http://wiki.muleumo.org/display/MULE/Mule+Extras">Mule Extras</a>.</description>
    <dependencies>
        <dependency>
            <artifactId>spring</artifactId>
            <groupId>springframework</groupId>
            <version>${spring_version}</version>
            <url>http://www.springframework.org</url>
        </dependency>
        <dependency>
            <artifactId>mule-extras-client</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-vm-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-jdbc-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://www.muleumo.org</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
            	<eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>geronimo-spec</groupId>
            <artifactId>geronimo-spec-jms</artifactId>
            <version>${geronimo_spec_jms_version}</version>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <mule.mini>true</mule.mini>
                <rar.bundle>false</rar.bundle>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
        	<groupId>hibernate</groupId>
        	<artifactId>hibernate</artifactId>
        	<version>${hibernate_version}</version>
        </dependency>
    </dependencies>
</project>
