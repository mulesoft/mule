<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mule="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:parsers-test="http://www.mulesource.org/schema/mule/parsers-test/2.0"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/parsers-test/2.0 http://www.mulesource.org/schema/mule/parsers-test/2.0/mule-parsers-test.xsd">

    <bean name="child1" class="org.mule.config.spring.parsers.ChildBean">
        <property name="name" value="child1"/>
    </bean>

    <bean name="child2" class="org.mule.config.spring.parsers.ChildBean">
        <property name="name" value="child2"/>
    </bean>

    <bean name="child3" class="org.mule.config.spring.parsers.ChildBean">
        <property name="name" value="child3"/>
    </bean>

    <parsers-test:orphan name="orphan1"/>

    <parsers-test:orphan1 child-ref="child1"/>

    <parsers-test:orphan name="orphan2" child-ref="child2"/>

    <parsers-test:orphan name="orphan3">
        <parsers-test:parent child-ref="child3"/>
    </parsers-test:orphan>

</beans>
