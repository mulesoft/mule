<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd">

    <model name="main">
        <service name="unique1" class="org.mule.tck.testmodels.mule.TestSedaComponent">
            <component class="org.mule.tck.services.UniqueComponent" />
        </service>
        <service name="unique2" class="org.mule.tck.testmodels.mule.TestSedaComponent">
            <singleton-object class="org.mule.tck.services.UniqueComponent" />
        </service>
        <service name="unique3" class="org.mule.tck.testmodels.mule.TestSedaComponent">
            <singleton-object instance-ref="myUniqueBean" />
        </service>
        <!-- SEDA-specific attributes 
        <service name="unique4" serviceFactory-ref="genericFactory" enablePooling="false"/>
        -->
    </model>

    <!-- Singleton bean -->    
    <spring:bean name="myUniqueBean" class="org.mule.tck.services.UniqueComponent" />
</mule>
