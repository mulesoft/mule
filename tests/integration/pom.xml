                        <exclude>org/mule/test/integration/client/MuleClientWsdlSoapExternalTestCase.java</exclude>
                        <exclude>org/mule/test/integration/providers/http/HttpFunctionalTestCase.java</exclude>
                        <exclude>org/mule/test/integration/providers/xmpp/XmppFunctionalTestCase.java</exclude>
                    </excludes>
