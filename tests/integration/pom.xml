    </parent>
    <artifactId>mule-tests-integration</artifactId>
    <name>Integration Tests</name>
    <description>Tests which ensure that Mule sub projects work well together.</description>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <!-- These tests hang if you're behind a firewall.
                            TODO Figure out how to use proxy settings for the tests. -->
                        <exclude>org/mule/test/integration/client/MuleClientAxisExternalTestCase.java</exclude>
                        <exclude>org/mule/test/integration/client/MuleClientWsdlSoapExternalTestCase.java</exclude>
                        <exclude>org/mule/test/integration/providers/http/HttpFunctionalTestCase.java</exclude>
                        <exclude>org/mule/test/integration/providers/xmpp/XmppFunctionalTestCase.java</exclude>
                        <!-- Requires an external Axis server running in Tomcat on 8080 with the Calculator.jws service deployed to it -->
                        <exclude>org/mule/test/integration/providers/soap/axis/AxisExternalServerTest.java</exclude>
                        <!-- to implement VM streaming -->
                        <exclude>org/mule/test/integration/providers/soap/xfire/XFireConnectorVMFunctionalTestCase.java</exclude>

                        <exclude>org/mule/test/integration/providers/email/EMailFunctionalTestCase.java</exclude>
                        <!-- spitting out exceptions, see MULE-1076 -->
                        <exclude>org/mule/samples/loanbroker/GlueLoanBrokerSynchronousFunctionalTestCase.java</exclude>

                        
                        <exclude>org/mule/test/integration/routing/replyto/ReplytoChainIntegration2TestCase.java</exclude>
                        <exclude>org/mule/test/integration/routing/replyto/ReplytoChainIntegration4TestCase.java</exclude>

                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

