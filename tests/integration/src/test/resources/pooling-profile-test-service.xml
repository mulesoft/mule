<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <model name="main">
        <service name="default">
            <pooled-component>
                <prototype-object
                    class="org.mule.tck.functional.FunctionalTestComponent" />
                <pooling-profile />
            </pooled-component>
        </service>

        <service name="fail_all">
            <pooled-component>
                <prototype-object
                    class="org.mule.tck.functional.FunctionalTestComponent" />
                <pooling-profile exhaustedAction="WHEN_EXHAUSTED_FAIL"
                    initialisationPolicy="INITIALISE_ALL" maxActive="1"
                    maxIdle="2" maxWait="3" />
            </pooled-component>
        </service>

        <service name="grow_one">
            <pooled-component>
                <prototype-object
                    class="org.mule.tck.functional.FunctionalTestComponent">
                </prototype-object>
                <pooling-profile exhaustedAction="WHEN_EXHAUSTED_GROW"
                    initialisationPolicy="INITIALISE_ONE" maxActive="2"
                    maxIdle="3" maxWait="4" />
            </pooled-component>
        </service>

        <service name="wait_none">
            <pooled-component>
                <prototype-object
                    class="org.mule.tck.functional.FunctionalTestComponent">
                </prototype-object>
                <pooling-profile exhaustedAction="WHEN_EXHAUSTED_WAIT"
                    initialisationPolicy="INITIALISE_NONE" maxActive="3"
                    maxIdle="4" maxWait="5" />
            </pooled-component>
        </service>

        <service name="evict_one">
            <pooled-component>
                <prototype-object
                        class="org.mule.test.spring.PoolingProfileTestCase$EvictablePooledComponent">
                </prototype-object>
                <pooling-profile exhaustedAction="WHEN_EXHAUSTED_WAIT"
                                 initialisationPolicy="INITIALISE_ALL" maxActive="1"
                                 maxIdle="1" maxWait="0"
                                 minEvictionMillis="500" evictionCheckIntervalMillis="200"/>
            </pooled-component>
        </service>
    </model>
</mule>
