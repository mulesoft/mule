<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="lifecycleBean" class="org.mule.test.integration.lifecycle.LifecycleBean"/>

    <bean id="failOnInitialiseLifecycleBean" class="org.mule.test.integration.lifecycle.LifecycleBean" depends-on="lifecycleBean">
        <property name="failurePhase" value="initialise"/>
    </bean>

</beans>