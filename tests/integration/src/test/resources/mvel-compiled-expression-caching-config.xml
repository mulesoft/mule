<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
             http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <flow name="foo-flow">
        <set-payload value="#[mel:new org.mule.mvel.Foo()]"/>

        <enricher target="#[mel:payload.stuff]">
            <set-payload value="#[mel:new org.mule.mvel.FooDetails()]"/>
        </enricher>

        <set-payload value="#[mel:new org.mule.mvel.Bar()]"/>

        <enricher target="#[mel:payload.stuff]">
            <set-payload value="#[mel:new org.mule.mvel.BarDetails()]"/>
        </enricher>

        <set-payload value="SUCCESS"/>
    </flow>
</mule>
