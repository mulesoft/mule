<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:file="http://www.mulesource.org/schema/mule/file"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.mulesource.org/schema/mule/core http://www.mulesource.org/schema/mule/core/3.0/mule.xsd
       http://www.mulesource.org/schema/mule/file http://www.mulesource.org/schema/mule/file/3.0/mule-file.xsd">

    <file:connector name="FileConnector" outputAppend="true" outputPattern="out.txt"/>
    
    <model name="fileAppend">
        <service name="Bridge">
            <inbound>
                <inbound-endpoint address="vm://fileappend"/>
            </inbound>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint address="file://myout" synchronous="true"/>
                </pass-through-router>
            </outbound>
        </service>
    </model>
</mule>
