<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:file="http://www.mulesource.org/schema/mule/file/2.0"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/file/2.0 http://www.mulesource.org/schema/mule/file/2.0/mule-file.xsd">

    <file:connector name="fileConnector" outputAppend="true" outputPattern="test-${COUNT}.out">
        <default-connector-exception-strategy>
            <outbound-endpoint address="file://./.mule/errors"/>
        </default-connector-exception-strategy>
    </file:connector>

    <model name="ESTest">
        <service name="FolderToVM">
            <inbound-router>
                <inbound-endpoint address="file://./.mule/in">
                    <custom-transformer name="failPoint" class="org.mule.test.transformers.FailingRuntimeTransformer"/>
                </inbound-endpoint>
                <forwarding-router/>
            </inbound-router>

            <outbound-router>
                <chaining-router>
                    <!--<endpoint address="stdio://System.out"/>-->
                    <outbound-endpoint address="file://./.mule/out"/>
                </chaining-router>
            </outbound-router>
        </service>
    </model>
</mule>
