<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xsi:schemaLocation="
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd">

    <spring:bean id="SpringBeanLifecycleTrackerComponent" class="org.mule.test.core.lifecycle.LifecycleTrackerComponentObject"
                 init-method="springInitialize" destroy-method="springDestroy" scope="singleton">
        <spring:property name="property" value="sbltc" />
    </spring:bean>

    <spring:bean id="SpringBeanLifecycleTrackerComponent2" class="org.mule.test.core.lifecycle.LifecycleTrackerComponentObject"
                 scope="singleton">
        <spring:property name="property" value="sbltc"/>
    </spring:bean>

    <flow name="SpringBeanService">
        <component>
            <spring-object bean="SpringBeanLifecycleTrackerComponent"/>
        </component>
    </flow>

    <flow name="SpringBeanService2">
        <component>
            <spring-object bean="SpringBeanLifecycleTrackerComponent2"/>
        </component>
    </flow>

    <flow name="MulePrototypeService">
        <component>
            <prototype-object class="org.mule.test.core.lifecycle.LifecycleTrackerComponentObject">
                <property key="property" value="mps"/>
            </prototype-object>
        </component>
    </flow>

    <flow name="MulePooledPrototypeService">
        <pooled-component>
            <prototype-object class="org.mule.test.core.lifecycle.LifecycleTrackerComponentObject">
                <property key="property" value="mpps"/>
            </prototype-object>
            <pooling-profile maxActive="3" initialisationPolicy="INITIALISE_ALL"/>
        </pooled-component>
    </flow>

    <flow name="MulePooledSingletonService">
        <pooled-component>
            <singleton-object class="org.mule.test.core.lifecycle.LifecycleTrackerComponentObject">
                <property key="property" value="mpps"/>
            </singleton-object>
            <pooling-profile maxActive="3" initialisationPolicy="INITIALISE_ALL"/>
        </pooled-component>
    </flow>

    <flow name="MuleSingletonService">
        <component>
            <singleton-object class="org.mule.test.core.lifecycle.LifecycleTrackerComponentObject">
                <property key="property" value="mss"/>
            </singleton-object>
        </component>
    </flow>

</mule>
