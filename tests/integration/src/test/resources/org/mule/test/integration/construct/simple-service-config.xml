<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:vm="http://www.mulesoft.org/schema/mule/vm"
  xmlns:test="http://www.mulesoft.org/schema/mule/test"
  xmlns:spring="http://www.springframework.org/schema/beans"
  xmlns:mcp="http://www.mulesoft.org/schema/mule/mcp"
  xsi:schemaLocation="
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.1/mule.xsd
       http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/3.1/mule-vm.xsd
       http://www.mulesoft.org/schema/mule/test http://www.mulesoft.org/schema/mule/test/3.1/mule-test.xsd
       http://www.mulesoft.org/schema/mule/mcp http://www.mulesoft.org/schema/mule/mcp/3.1/mule-mcp.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <mcp:simple-service name="maths-service-1"
                  address="vm://maths1.in"
                  component-class="org.mule.tck.services.SimpleMathsComponent" />

  <mcp:simple-service name="abstract-maths-service-2"
                  abstract="true"
                  component-class="org.mule.tck.services.SimpleMathsComponent" />

  <mcp:simple-service name="maths-service-2"
                  address="vm://maths2.in"
                  parent="abstract-maths-service-2" />
                  
  <vm:endpoint name="maths-service-3-endpoint"
               path="maths3.in" />

  <mcp:simple-service name="maths-service-3"
                  endpoint-ref="maths-service-3-endpoint"
                  component-class="org.mule.tck.services.SimpleMathsComponent" />
                  
  <spring:bean name="math-component"
               class="org.mule.tck.services.SimpleMathsComponent" />

  <mcp:simple-service name="maths-service-4"
                  address="vm://maths4.in"
                  component-ref="math-component" />
                  
  <byte-array-to-string-transformer name="byte-array-to-string" />
  <append-string-transformer name="append-bar" message="bar"/>
  <append-string-transformer name="append-baz" message="baz"/>
  <string-to-byte-array-transformer name="string-to-byte-array" />
  
  <mcp:simple-service name="byte-array-massager-1"
                  address="vm://bam1.in"
                  transformer-refs="byte-array-to-string append-bar"
                  responseTransformer-refs="append-baz string-to-byte-array"
                  component-class="org.mule.component.simple.EchoComponent" />
  
  <mcp:simple-service name="byte-array-massager-2"
                  address="vm://bam2.in"
                  parent="byte-array-massager-1" />
                    
  <mcp:simple-service name="maths-service-5"
                  address="vm://maths5.in">
    <component class="org.mule.tck.services.SimpleMathsComponent" />
  </mcp:simple-service>

  <mcp:simple-service name="maths-service-6"
                  address="vm://maths6.in">
    <component class="org.mule.tck.services.SimpleMathsComponent">
      <method-entry-point-resolver>
        <include-entry-point method="add"/>
      </method-entry-point-resolver>
    </component>
  </mcp:simple-service>
  
  <mcp:simple-service name="maths-service-7"
                  component-class="org.mule.tck.services.SimpleMathsComponent">
    <vm:inbound-endpoint path="maths7.in"
                         exchange-pattern="request-response" />
  </mcp:simple-service>

  <mcp:simple-service name="exception-strategy"
                  address="vm://exst.in"
                  component-class="org.mule.tck.services.SimpleMathsComponent">
    <default-exception-strategy />
  </mcp:simple-service>
  
  <mcp:simple-service name="global-exception-strategy"
                  abstract="true">
    <custom-exception-strategy
                  class="org.mule.test.integration.exceptions.TestExceptionStrategy" />
  </mcp:simple-service>
  
  <mcp:simple-service name="inherited-exception-strategy"
                  parent="global-exception-strategy"
                  address="vm://iexst.in">
    <test:component throwException="true" />
  </mcp:simple-service>
  
  <!-- JAX-WS service -->
  <mcp:simple-service name="weather-forecaster-ws"
                  address="http://localhost:6099/weather-forecast"
                  component-class="org.mule.test.integration.tck.WeatherForecaster"
                  type="jax-ws" />
  
  <!-- JAXB consumer -->
  <mcp:simple-service name="weather-jaxb-consumer"
                  address="vm://weather-consumer.in"
                  component-class="org.mule.test.integration.tck.WeatherReportConsumer" />

  <!-- XPath consumer -->
  <mcp:simple-service name="weather-xpath-consumer"
                  address="vm://weather-xpath-consumer.in"
                  component-class="org.mule.test.integration.tck.WeatherReportXpathConsumer" />
  
  <!-- type inheritance service, issue MULE-5071 -->
  <mcp:simple-service name="abstract-weather-forecaster-ws"
                  abstract="true"
                  component-class="org.mule.test.integration.tck.WeatherForecaster"
                  type="jax-ws" />
                  
  <mcp:simple-service name="concrete-weather-forecaster-ws"
                  parent="abstract-weather-forecaster-ws"
                  address="http://localhost:6098/weather-forecast" />
                  
  <!-- Functional testing -->
  <mcp:simple-service name="functional-test-component-1"
                  address="vm://ftc1.in">
    <test:component />
  </mcp:simple-service>

	<mcp:simple-service abstract="true" name="abstract-service" component-class="org.mule.test.integration.tck.WeatherReportConsumer">
		<inbound-endpoint address="test://in" exchange-pattern="request-response">
			<property key="competingConsumers" value="true"/>
		</inbound-endpoint>
		<custom-exception-strategy
			class="org.mule.test.integration.exceptions.TestExceptionStrategy" />
	</mcp:simple-service>

	<mcp:simple-service name="child-service-1" parent="abstract-service" />

	<mcp:simple-service name="child-service-2" parent="abstract-service" />
	
</mule>
