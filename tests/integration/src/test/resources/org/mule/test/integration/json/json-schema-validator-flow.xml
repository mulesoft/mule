<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:vm="http://www.mulesoft.org/schema/mule/vm"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
                          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
                          http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/current/mule-vm.xsd">

    <flow name="jsonSchemaValidatorFlow">
        <vm:inbound-endpoint path="jsonSchemaValidatorEndpoint" exchange-pattern="request-response"/>
        <invoke object-ref="jsonSchemaValidatorBean" method="validateJsonSchema" methodArguments="#[payload]"/>
    </flow>

    <spring:bean name="jsonSchemaValidatorBean" class="org.mule.test.integration.json.JsonSchemaValidatorTestCase$JsonSchemaValidator"/>

</mule>
