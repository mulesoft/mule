<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:mule="http://www.mulesoft.org/schema/mule/core"
      xmlns:pattern="http://www.mulesoft.org/schema/mule/pattern"
      xmlns:vm="http://www.mulesoft.org/schema/mule/vm"
      xmlns:test="http://www.mulesoft.org/schema/mule/test"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
       http://www.mulesoft.org/schema/mule/test http://www.mulesoft.org/schema/mule/test/current/mule-test.xsd
       http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/current/mule-vm.xsd
        http://www.mulesoft.org/schema/mule/pattern http://www.mulesoft.org/schema/mule/pattern/current/mule-pattern.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <vm:connector name="vmConnector"/>

    <model>
        <default-exception-strategy>
            <vm:outbound-endpoint path="modelout" exchange-pattern="one-way"
                                  connector-ref="vmConnector"/>
        </default-exception-strategy>

        <service name="testService1">
            <inbound>
                <vm:inbound-endpoint path="inservice1" exchange-pattern="one-way"/>
            </inbound>
            <test:component throwException="true"/>
            <default-exception-strategy>
                <vm:outbound-endpoint path="service1out" exchange-pattern="one-way"
                    connector-ref="vmConnector"/>
            </default-exception-strategy>
        </service>

        <service name="testService">
            <inbound>
                <vm:inbound-endpoint path="inservice2" exchange-pattern="one-way"/>
            </inbound>
            <test:component throwException="true"/>
        </service>

    </model>


    <pattern:simple-service name="testSS1"
                    address="vm://inss1">
        <test:component throwException="true" />
        <default-exception-strategy>
            <vm:outbound-endpoint path="ss1out" exchange-pattern="one-way"
                                  connector-ref="vmConnector"/>
        </default-exception-strategy>
    </pattern:simple-service>

    <pattern:simple-service name="testSS2"
                    address="vm://inss2">
        <test:component throwException="true" />
    </pattern:simple-service>

    <flow name="testflow1">
        <vm:inbound-endpoint path="inflow1" exchange-pattern="one-way"/>
        <custom-processor class="org.mule.test.integration.exceptions.ExceptionStrategyConstructsTestCase$ExceptionThrowingProcessor"/>
        <default-exception-strategy>
            <vm:outbound-endpoint path="flow1out" exchange-pattern="one-way"
                                  connector-ref="vmConnector"/>
        </default-exception-strategy>
    </flow>

</mule>
