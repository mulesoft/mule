<?xml version="1.0" encoding="utf-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

      xsi:schemaLocation="
               http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">


    <flow name="negative">
        <poll>
            <fixed-frequency-scheduler frequency="${frequency.millis}" startDelay="-500"/>
            <static-component>
                <return-data>negative</return-data>
            </static-component>
        </poll>
        <component class="org.mule.test.integration.schedule.PollScheduleDelayTestCase$NegativeComponent"/>
    </flow>

    <flow name="zero">
        <poll>
            <fixed-frequency-scheduler frequency="${frequency.millis}" startDelay="0"/>
            <static-component>
                <return-data>zero</return-data>
            </static-component>
        </poll>
        <component class="org.mule.test.integration.schedule.PollScheduleDelayTestCase$ZeroComponent"/>
    </flow>

    <flow name="positive">
        <poll>
            <fixed-frequency-scheduler frequency="${frequency.millis}" startDelay="500"/>
            <static-component>
                <return-data>positive</return-data>
            </static-component>
        </poll>
        <component class="org.mule.test.integration.schedule.PollScheduleDelayTestCase$PositiveComponent"/>
    </flow>


</mule>