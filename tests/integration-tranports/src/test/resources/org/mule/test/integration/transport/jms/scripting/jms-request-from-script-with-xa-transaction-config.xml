<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:jbossts="http://www.mulesoft.org/schema/mule/jbossts"
      xmlns:vm="http://www.mulesoft.org/schema/mule/transport/vm"
      xmlns:jms="http://www.mulesoft.org/schema/mule/transport/jms"
      xmlns:scripting="http://www.mulesoft.org/schema/mule/scripting"
      xsi:schemaLocation="
    http://www.mulesoft.org/schema/mule/jbossts http://www.mulesoft.org/schema/mule/jbossts/current/mule-jbossts.xsd
    http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
    http://www.mulesoft.org/schema/mule/transport/vm http://www.mulesoft.org/schema/mule/transport/vm/current/mule-transport-vm.xsd
    http://www.mulesoft.org/schema/mule/transport/jms http://www.mulesoft.org/schema/mule/transport/jms/current/mule-transport-jms.xsd
    http://www.mulesoft.org/schema/mule/scripting http://www.mulesoft.org/schema/mule/scripting/current/mule-scripting.xsd">

    <jbossts:transaction-manager>
    </jbossts:transaction-manager>

    <jms:activemq-connector name="jmsConnector" disableTemporaryReplyToDestinations="true"/>

    <jms:activemq-xa-connector name="jmsConnectorXA" maxRedelivery="3" disableTemporaryReplyToDestinations="true"/>

    <flow name="addDataToQueue">
        <vm:inbound-endpoint path="in" exchange-pattern="request-response"/>
        <jms:outbound-endpoint queue="fcs.cache.update.queue"
                               connector-ref="jmsConnector" exchange-pattern="request-response">
        </jms:outbound-endpoint>
    </flow>

    <flow name="startBatch">
        <vm:inbound-endpoint path="startBatch" exchange-pattern="request-response"/>
        <jms:outbound-endpoint queue="fcs.cache.xa.batch.queue" connector-ref="jmsConnector"
                               exchange-pattern="request-response"/>
    </flow>

    <flow name="processBatchData">
        <jms:inbound-endpoint queue="fcs.cache.xa.batch.queue" connector-ref="jmsConnectorXA"
                              responseTimeout="10000">
            <xa-transaction action="ALWAYS_BEGIN" timeout="10000"/>
        </jms:inbound-endpoint>
        <scripting:component>
            <scripting:script engine="groovy"><![CDATA[
                    import org.mule.api.*;

                     String jmsUrl = "jms://fcs.cache.update.queue?connector=jmsConnectorXA";
                    long timeout = 100L;
                    String result = "";

                    InternalMessage muleMessage = eventContext.requestEvent(jmsUrl, timeout);
                    while (muleMessage != null)
                    {
                        result = result + "message";
                        muleMessage = eventContext.requestEvent(jmsUrl, timeout);
                    }
                    return result;
                ]]>
            </scripting:script>
        </scripting:component>

        <jms:outbound-endpoint queue="status.queue"
                               connector-ref="jmsConnectorXA">
            <xa-transaction action="BEGIN_OR_JOIN"/>
        </jms:outbound-endpoint>
    </flow>

</mule>

