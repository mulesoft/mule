<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mule</groupId>
        <artifactId>mule</artifactId>
        <version>3.7.0-M1-SNAPSHOT</version>
    </parent>
    <groupId>org.mule.modules</groupId>
    <artifactId>mule-modules</artifactId>
    <packaging>pom</packaging>
    <name>Mule Modules</name>
    <description>Modules which extend the Mule Core but do not qualify as Transports</description>

    <properties>
        <licensePath>../LICENSE_HEADER.txt</licensePath>
    </properties>

    <modules>
        <module>atom</module>
        <module>annotations</module>
        <module>all-modules</module>
        <module>builders</module>
        <module>boot</module>
        <module>bpm</module>
        <module>cxf</module>
        <module>db</module>
        <module>devkit-support</module>
        <module>drools</module>
        <module>extensions-support</module>
        <module>launcher</module>
        <module>client</module>
        <module>guice</module>
        <module>http</module>
        <module>jaas</module>
        <module>jboss-transactions</module>
        <module>jbpm</module>
        <module>jersey</module>
        <module>json</module>
        <module>management</module>
        <module>oauth</module>
        <module>ognl</module>
        <module>pgp</module>
        <module>reboot</module>
        <module>rss</module>
        <module>schedulers</module>
        <module>scripting</module>
        <module>spring-extras</module>
        <module>spring-config</module>

        <!-- depends on spring-config so it has to go after it -->
        <module>extensions-spring-support</module>
        
        <module>spring-security</module>
        <module>sxc</module>
        <module>tomcat</module>
        <module>ws</module>
        <module>xml</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                    <skipDeploy>true</skipDeploy>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
