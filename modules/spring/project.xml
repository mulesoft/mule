<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/3.0.0 http://maven.apache.org/maven-v3_0_0.xsd">
    <extend>${basedir}/../project.xml</extend>
    <groupId>mule</groupId>
    <id>mule-extras-spring</id>
    <artifactId>mule-extras-spring</artifactId>
    <name>Spring Extensions</name>
    <shortDescription>spring</shortDescription>
    <description>Provides extensions to use the Spring framework with Mule such as utilising the the spring container to build components managed by Mule.
    </description>
    <url>http://www.muleumo.org/docs/modules/mule-extras-spring/</url>
    <dependencies>
        <dependency>
            <artifactId>spring</artifactId>
            <groupId>springframework</groupId>
            <version>${spring_version}</version>
            <url>http://www.springframework.org</url>
        </dependency>
        <dependency>
            <artifactId>mule-extras-client</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-extras-client/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-http-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-http-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <!-- required by http -->
        <dependency>
            <artifactId>mule-tcp-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-tcp-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-vm-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-vm-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-http-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-http-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <artifactId>mule-jdbc-provider</artifactId>
            <groupId>mule</groupId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-jdbc-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>geronimo-spec</groupId>
            <artifactId>geronimo-spec-jms</artifactId>
            <version>${geronimo_spec_jms_version}</version>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <mule.mini>true</mule.mini>
                <rar.bundle>false</rar.bundle>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>${hibernate_version}</version>
        </dependency>
        <dependency>
            <artifactId>commons-httpclient</artifactId>
            <groupId>commons-httpclient</groupId>
            <version>${commons_httpclient_version}</version>
        </dependency>
        <dependency>
            <artifactId>commons-codec</artifactId>
            <groupId>commons-codec</groupId>
            <version>${commons_codec_version}</version>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <unitTest>
            <resources>
                <resource>
                    <directory>${basedir}/src/test/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>
