<?xml version="1.0" encoding="UTF-8"?>
<module name="module-multiple-global-elements"
        xmlns="http://www.mulesoft.org/schema/mule/module"
        xmlns:file="http://www.mulesoft.org/schema/mule/file"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.mulesoft.org/schema/mule/module http://www.mulesoft.org/schema/mule/module/current/mule-module.xsd
           http://www.mulesoft.org/schema/mule/file http://www.mulesoft.org/schema/mule/file/current/mule-file.xsd">

    <property name="workingDir" type="string"/>
    <property name="filenamePattern" type="string"/>

    <file:config name="file">
        <file:connection workingDir="#[vars.workingDir]"/>
    </file:config>
    <file:matcher name="globalMatcher" directories="REQUIRE" filenamePattern="#[vars.filenamePattern]" />

    <operation name="list">
        <parameters>
            <parameter name="path" type="string"/>
        </parameters>
        <body>
            <file:list directoryPath="#[vars.path]" config-ref="file" matcher="globalMatcher"/>
        </body>
        <output type="string"/>
    </operation>

    <operation name="read">
        <parameters>
            <parameter name="path" type="string"/>
        </parameters>
        <body>
            <file:read path="#[vars.path]" config-ref="file" />
        </body>
        <output type="binary"/>
    </operation>

    <operation name="read-forcing-mimetype">
        <parameters>
            <parameter name="path" type="string"/>
            <parameter name="forcedMimeType" type="string" defaultValue="*/*"/>
        </parameters>
        <body>
            <file:read path="#[vars.path]" config-ref="file" outputMimeType="#[vars.forcedMimeType]" />
        </body>
        <output type="binary"/>
    </operation>
</module>
