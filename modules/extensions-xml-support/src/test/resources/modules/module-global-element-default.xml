<?xml version="1.0" encoding="UTF-8"?>
<module name="module-global-element-default"
        xmlns="http://www.mulesoft.org/schema/mule/module"
        xmlns:tns="http://www.mulesoft.org/schema/mule/module-global-element-default"
        xmlns:petstore="http://www.mulesoft.org/schema/mule/petstore"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.mulesoft.org/schema/mule/module http://www.mulesoft.org/schema/mule/module/current/mule-module.xsd
           http://www.mulesoft.org/schema/mule/module-global-element-default http://www.mulesoft.org/schema/mule/module-global-element-default/current/mule-module-global-element-default.xsd
           http://www.mulesoft.org/schema/mule/petstore http://www.mulesoft.org/schema/mule/petstore/current/mule-petstore.xsd">

    <petstore:config name="petstore" cashierName="jim">
        <petstore:pooled-connection username="john" password="notDoe" />
        <petstore:pets>
            <petstore:pet value="la tota" />
            <petstore:pet value="la porota" />
        </petstore:pets>
    </petstore:config>

    <operation name="do-get-client">
        <body>
            <petstore:get-client config-ref="petstore" />
        </body>
        <output type="string"/>
    </operation>

    <operation name="do-get-pets">
        <parameters>
            <parameter name="owner" type="string" />
        </parameters>
        <body>
            <petstore:get-pets config-ref="petstore" ownerName="#[vars.owner]" />
        </body>
        <output type="string"/>
    </operation>

    <operation name="do-get-client-with-private-operation">
        <body>
            <tns:private-do-get-client />
        </body>
        <output type="string"/>
    </operation>

    <operation name="private-do-get-client" visibility="PRIVATE">
        <body>
            <petstore:get-client config-ref="petstore" />
        </body>
        <output type="string"/>
    </operation>
</module>