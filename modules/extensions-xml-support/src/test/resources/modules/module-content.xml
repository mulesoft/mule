<?xml version="1.0" encoding="UTF-8"?>
<module name="module-content"
        xmlns="http://www.mulesoft.org/schema/mule/module"
        xmlns:mule="http://www.mulesoft.org/schema/mule/core"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.mulesoft.org/schema/mule/module http://www.mulesoft.org/schema/mule/module/current/mule-module.xsd
           http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <operation name="set-payload-using-content-parameter">
        <parameters>
            <parameter name="content" type="string" role="CONTENT"/>
        </parameters>
        <body>
            <mule:set-payload value="#[vars.content]"/>
        </body>
        <output type="string"/>
    </operation>

    <operation name="set-payload-using-content-and-simple-parameter">
        <parameters>
            <parameter name="parameter1" type="string"/>
            <parameter name="content" type="string" role="CONTENT"/>
        </parameters>
        <body>
            <mule:set-payload value="#['attribute value:[' ++ vars.parameter1 ++ '], value of content (accessing map under key smart):[' ++ vars.content ++ ']']"/>
        </body>
        <output type="string"/>
    </operation>

    <operation name="set-payload-using-primary-parameter">
        <parameters>
            <parameter name="primary" type="string" role="PRIMARY"/>
        </parameters>
        <body>
            <mule:set-payload value="#[vars.primary]"/>
        </body>
        <output type="string"/>
    </operation>

    <operation name="set-payload-using-content-and-primary-and-simple-parameter">
        <parameters>
            <parameter name="parameter1" type="string"/>
            <parameter name="content" type="string" role="CONTENT"/>
            <parameter name="primary" type="string" role="PRIMARY"/>
        </parameters>
        <body>
            <mule:set-payload value="#['attribute value:[' ++ vars.parameter1 ++ '], value of content:[' ++ vars.content ++ '], value of primary:[' ++ vars.primary ++ ']']"/>
        </body>
        <output type="string"/>
    </operation>
</module>
