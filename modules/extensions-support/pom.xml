            <artifactId>mule-sample-data-extension</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/resources</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <filtering>true</filtering>
                <directory>${basedir}/src/test/resources</directory>
            </testResource>
        </testResources>

        <plugins>
            <!-- Required by mule-extension-ast-loader -->
            <!-- Force creation of the test-jar before the shade-plugin runs -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-test-jar</id>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>*</include>
                                <include>org/mule/runtime/module/extension/internal/resources/test/**</include>
                                <include>org/mule/runtime/module/extension/internal/loader/parser/java/test/**</include>
                                <include>org/mule/runtime/module/extension/internal/util/test/**</include>
                                <include>org/mule/test/**</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>                
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <!-- From Spring we just require ResolvableType and DefaultConversionService for use in this module. -->
                                    <!-- Shading and minimizing it we avoid including the whole spring-core jar as a dependency. -->
                                    <includes>org.springframework:spring-core</includes>
                                </includes>
                            </artifactSet>
                            <relocations>
                                <relocation>
                                    <pattern>org.springframework</pattern>
                                    <shadedPattern>org.mule.springframework</shadedPattern>
                                </relocation>
                            </relocations>
                            <filters>
                                <!-- Avoid having SPI references to spring classes -->
                                <filter>
                                    <artifact>org.springframework:spring-core</artifact>
                                    <excludes>
                                        <exclude>META-INF/**</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <!-- Required by mule-extension-ast-loader -->
                            <shadeTestJar>true</shadeTestJar>
                            <minimizeJar>true</minimizeJar>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
