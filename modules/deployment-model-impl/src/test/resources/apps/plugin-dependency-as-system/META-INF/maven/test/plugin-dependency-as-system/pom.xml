            <systemPath>${muleRuntimeConfig.maven.repositoryLocation}/${dependencyGroupId}/${dependencyArtifactId}/${dependencyVersion}/${dependencyArtifactId}-${dependencyVersion}-mule-plugin.jar</systemPath>
