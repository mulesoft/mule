<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:util="http://www.springframework.org/schema/util"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-current.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <flow name="payload1">
        <inbound-endpoint address="vm://payload1?method=processNoTransformString" exchange-pattern="request-response"/>
        <component class="org.mule.api.annotations.param.PayloadAnnotationComponent"/>
    </flow>

    <flow name="payload2">
        <inbound-endpoint address="vm://payload2?method=processAutoTransformString"
                          exchange-pattern="request-response"/>
        <component class="org.mule.api.annotations.param.PayloadAnnotationComponent"/>
    </flow>

    <flow name="payload3">
        <inbound-endpoint address="vm://payload3?method=processFailedAutoTransformString"
                          exchange-pattern="request-response"/>
        <component class="org.mule.api.annotations.param.PayloadAnnotationComponent"/>
    </flow>

</mule>
