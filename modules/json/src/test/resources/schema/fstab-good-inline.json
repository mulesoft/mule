{
    "/": {
        "device": "/dev/sda1",
        "fstype": "btrfs",
        "options": [ "ssd" ]
    },
    "storage": {
        "type": "disk",
        "device": "/dev/sda1"
    },
    "swap": {
        "device": "/dev/sda2",
        "fstype": "swap"
    },
    "/tmp": {
        "device": "tmpfs",
        "fstype": "tmpfs",
        "options": [ "size=64M" ]
    },
    "/var/lib/mysql": {
        "device": "/dev/data/mysql",
        "fstype": "btrfs"
    }
}