<?xml version="1.0" encoding="utf-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:schedulers="http://www.mulesoft.org/schema/mule/schedulers"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesoft.org/schema/mule/schedulers http://www.mulesoft.org/schema/mule/schedulers/current/mule-schedulers.xsd
               http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">


    <flow name="echo" processingStrategy="synchronous">
        <static-component>
            <return-data>foo</return-data>
        </static-component>
    </flow>

    <flow name="pollfoo">
        <scheduler doc:name="watermark">
            <schedulers:cron-scheduler expression="0/1 * * * * ?"/>
        </scheduler>
        <flow-ref name="echo"/>
        <component class="org.mule.test.module.scheduler.cron.CronSchedulerTestCase$FooComponent"/>
    </flow>


    <flow name="pollbar" processingStrategy="synchronous">
        <scheduler>
            <schedulers:cron-scheduler expression="${expression.property}"/>
        </scheduler>
        <static-component>
            <return-data>bar</return-data>
        </static-component>
       <component class="org.mule.test.module.scheduler.cron.CronSchedulerTestCase$BarComponent"/>
    </flow>

</mule>
