<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:mulexml="http://www.mulesoft.org/schema/mule/xml"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/xml http://www.mulesoft.org/schema/mule/xml/current/mule-xml.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <mulexml:namespace-manager includeConfigNamespaces="true">
        <mulexml:namespace prefix="soap" uri="http://schemas.xmlsoap.org/soap/envelope/"/>
        <mulexml:namespace prefix="mule" uri="http://simple.component.mule.org/"/>
    </mulexml:namespace-manager>

    <flow name="shakespeareLines">
        <expression-transformer expression="xpath3('//LINE[contains(., $word)]', payload, flowVars['returnType'])" />
    </flow>

    <flow name="actTitles">
        <expression-transformer expression="xpath3('concat(ancestor::ACT/TITLE, \' \', ancestor::SCENE/TITLE)')" />
    </flow>

    <flow name="findSpeaker">
        <expression-transformer expression="xpath3('string(ancestor::SPEECH/SPEAKER[1])')" />
    </flow>

    <flow name="countLines">
        <expression-transformer expression="xpath3('count(//LINE)', payload, 'NUMBER')" />
    </flow>

    <flow name="payloadConsumed">
        <set-variable variableName="result" value="#[xpath3('count(//LINE)')]" />
    </flow>

    <flow name="foreach">
        <foreach collection="#[xpath3('//LINE', payload, 'NODESET')]">
            <expression-component>flowVars['nodes'].add(payload)</expression-component>
        </foreach>
    </flow>

</mule>
