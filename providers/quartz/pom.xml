    <name>Quartz Provider</name>
    <description>A Mule provider for Quartz. This provider supplies a receiver for jobs scheduled with Quartz.</description>
    <dependencies>
        <dependency>
            <groupId>quartz</groupId>
            <artifactId>quartz</artifactId>
            <version>1.4.0</version>
        </dependency>

