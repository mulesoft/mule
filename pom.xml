    <developers>
        <!-- Refer to http://mule.mulesource.org/Team -->
    </developers>
    <contributors>
        <!-- Refer to http://mule.mulesource.org/Team -->
    </contributors>
    <issueManagement>
        <system>jira</system>
        <url>http://dev.mulesource.org/jira/browse/MULE</url>
    </issueManagement>

