<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.mule.tools</groupId>
        <artifactId>mule-tools</artifactId>
        <version>3.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>ibean-archetype</artifactId>
    <packaging>maven-archetype</packaging>
    <name>ibean-archetype</name>
    <version>3.1.0-SNAPSHOT</version>
    <description>Creates a new iBean project that talks to an external service i.e. Twitter, Amazon S3, Flickr). The project will define the dependencies and documented sample
        code for the ibean itself and a a working testcase.</description>
    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-webdav</artifactId>
                <version>1.0-beta-2</version>
            </extension>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>2.0-alpha-4</version>
            </extension>
        </extensions>
        <!-- Reverting this change because it broke the Bamboo build
        <plugins>
            <plugin>
                <artifactId>maven-archetype-plugin</artifactId>
                <version>2.0-alpha-4</version>
                <extensions>true</extensions>
            </plugin>
        </plugins>
        -->
    </build>
    <distributionManagement>
        <repository>
            <id>muleforge.webdav.releases</id>
            <url>dav:https://dav.muleforge.org/repository/ibeans</url>
        </repository>
        <snapshotRepository>
            <uniqueVersion>false</uniqueVersion>
            <id>muleforge.webdav.snapshots</id>
            <url>dav:https://dav.muleforge.org/snapshots.repository/ibeans</url>
        </snapshotRepository>
        <site>
            <id>muleforge.webdav.sites</id>
            <url>dav:https://dav.muleforge.org/ibeans-contrib/maven/${version}</url>
        </site>
        <downloadUrl>http://mulesoft.org/display/IBEANS/Download</downloadUrl>
    </distributionManagement>
</project>
