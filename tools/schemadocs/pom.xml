    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <!-- 
                                The choice of phase is sensitive here. Since we use a class
                                that's compiled in this module we must chose a phase 
                                later than 'compile'.  We also need a phase earlier than
                                'package' since our results are in target.
                                -->
                        <phase>process-classes</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>org.mule.tools.schemadocs.SchemaDocsMain</mainClass>
                            <arguments>
                                <!-- first two args are the header/footer for the file -->
                                <argument>schemadoc-prefix.txt</argument>
                                <argument>schemadoc-postfix.txt</argument>
                                <!-- this is the destination of the final composite schema
                                        relative paths are relative to maven's target directory
                                        absolute paths are absolute.
                                        in either case, directories are created as needed. -->
                                <!-- argument>normalized/normalized.xsd</argument -->
                                <argument>/var/www/html/docs/xsd-doc/normalized.xsd</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
