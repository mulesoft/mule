<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:jms="http://www.mulesoft.org/schema/mule/jms"
      xsi:schemaLocation="
       http://www.mulesoft.org/schema/mule/jms http://www.mulesoft.org/schema/mule/jms/current/mule-jms.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

<!--    <jms:activemq-connector name="connector1"/>-->

    <jms:activemq-connector name="connector1" specification="1.1" maxRedelivery="1" validateConnections="true">
        <reconnect-forever frequency="10000" />
    </jms:activemq-connector>

    <jms:endpoint name="dlq" queue="dlq" exchange-pattern="one-way">
        <jms:transaction action="ALWAYS_JOIN"/>
    </jms:endpoint>

</mule>
