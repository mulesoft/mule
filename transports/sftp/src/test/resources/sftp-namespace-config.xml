<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:sftp="http://www.mulesoft.org/schema/mule/sftp"
      xsi:schemaLocation="
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
        http://www.mulesoft.org/schema/mule/sftp http://www.mulesoft.org/schema/mule/sftp/current/mule-sftp.xsd">

    <sftp:connector name="sftpConnector"
                    pollingFrequency="15000"
                    autoDelete="true"
                    fileAge="1234"
                    tempDirOutbound="uploading"
                    maxConnectionPoolSize="42">
        <!-- the test case depends on the mule context creation but it does not executes any SFTP endpoint -->
        <reconnect-forever blocking="false"/>
    </sftp:connector>

    <flow name="receiving">
        <sftp:inbound-endpoint name="inboundEndpoint" autoDelete="true"
                               address="sftp://john.doe:foo@$localhost/~/data"
                               pollingFrequency="10000"/>
        <echo-component/>
    </flow>
</mule>
