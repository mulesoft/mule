<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:sftp="http://www.mulesoft.org/schema/mule/sftp"
      xmlns:vm="http://www.mulesoft.org/schema/mule/vm"
      xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/sftp http://www.mulesoft.org/schema/mule/sftp/current/mule-sftp.xsd
		http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/current/mule-vm.xsd
        ">

    <spring:beans>
        <spring:import resource="sftp-properties.xml"/>
    </spring:beans>

    <sftp:connector name="sftpAppendConnector" duplicateHandling="append" tempDirInbound="archive" useTempFileTimestampSuffix="true" />
    <sftp:connector name="sftpAppendConnectorWithTempDirOutbound" duplicateHandling="append" tempDirInbound="archive" useTempFileTimestampSuffix="true" tempDirOutbound="tempFolder" />
    <sftp:connector name="sftpOverwriteConnector" duplicateHandling="overwrite" tempDirInbound="archive" useTempFileTimestampSuffix="true" />
    <sftp:connector name="sftpOverwriteConnectorWithTempDirOutbound" duplicateHandling="overwrite" tempDirInbound="archive" tempDirOutbound="tempFolder" useTempFileTimestampSuffix="true" />
    <sftp:connector name="sftpAddSeqNo" duplicateHandling="addSeqNo" tempDirInbound="archive" useTempFileTimestampSuffix="true" />
    <sftp:connector name="sftpAddSeqNoWithTempDirOutbound" duplicateHandling="addSeqNo" tempDirInbound="archive" useTempFileTimestampSuffix="true" tempDirOutbound="tempFolder" />

    <flow name="testAppend">
        <vm:inbound-endpoint path="append" exchange-pattern="request-response" />
        <sftp:outbound-endpoint address="sftp://${USER1_NAME}:${USER1_PASSWORD}@${SFTP_HOST}:${SFTP_PORT}/~/testdir" outputPattern="append.txt" connector-ref="sftpAppendConnector" />
    </flow>

    <flow name="testAppendWithTempDirOutbound">
        <vm:inbound-endpoint path="append-with-temp-dir-outbound" exchange-pattern="request-response" />
        <sftp:outbound-endpoint address="sftp://${USER1_NAME}:${USER1_PASSWORD}@${SFTP_HOST}:${SFTP_PORT}/~/testdir" outputPattern="append.txt" connector-ref="sftpAppendConnectorWithTempDirOutbound" />
    </flow>

    <flow name="testAddSeqNo">
        <vm:inbound-endpoint path="add-seq-no" exchange-pattern="request-response" />
        <sftp:outbound-endpoint address="sftp://${USER1_NAME}:${USER1_PASSWORD}@${SFTP_HOST}:${SFTP_PORT}/~/testdir" outputPattern="append.txt" connector-ref="sftpAddSeqNo" />
    </flow>

    <flow name="testAddSeqNoWithTempDirOutbound">
        <vm:inbound-endpoint path="add-seq-no-with-temp-dir-outbound" exchange-pattern="request-response" />
        <sftp:outbound-endpoint address="sftp://${USER1_NAME}:${USER1_PASSWORD}@${SFTP_HOST}:${SFTP_PORT}/~/testdir" outputPattern="append.txt" connector-ref="sftpAddSeqNoWithTempDirOutbound" />
    </flow>

    <flow name="testDefault">
        <vm:inbound-endpoint path="overwrite" exchange-pattern="request-response" />
        <sftp:outbound-endpoint address="sftp://${USER1_NAME}:${USER1_PASSWORD}@${SFTP_HOST}:${SFTP_PORT}/~/testdir" outputPattern="overwrite.txt" connector-ref="sftpOverwriteConnector" />
    </flow>

    <flow name="testDefaultWithTempDirOutbound">
        <vm:inbound-endpoint path="overwrite-with-temp-dir-outbound" exchange-pattern="request-response" />
        <sftp:outbound-endpoint address="sftp://${USER1_NAME}:${USER1_PASSWORD}@${SFTP_HOST}:${SFTP_PORT}/~/testdir" outputPattern="overwrite.txt" connector-ref="sftpOverwriteConnectorWithTempDirOutbound" />
    </flow>

</mule>
