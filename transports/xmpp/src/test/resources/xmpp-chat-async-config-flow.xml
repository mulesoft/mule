<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:spring="http://www.springframework.org/schema/beans"
    xmlns:xmpp="http://www.mulesoft.org/schema/mule/xmpp" xmlns:vm="http://www.mulesoft.org/schema/mule/vm"
    xmlns:test="http://www.mulesoft.org/schema/mule/test" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.2/mule.xsd
       http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/3.2/mule-vm.xsd
       http://www.mulesoft.org/schema/mule/test http://www.mulesoft.org/schema/mule/test/3.2/mule-test.xsd
       http://www.mulesoft.org/schema/mule/xmpp http://www.mulesoft.org/schema/mule/xmpp/3.2/mule-xmpp.xsd">

    <!-- Dispatch via chat -->

    <flow name="dispatchViaChat">

        <vm:inbound-endpoint path="in"
            exchange-pattern="one-way" />
        <xmpp:outbound-endpoint type="CHAT"
            recipient="${conversationPartner}" exchange-pattern="one-way" />

    </flow>
    <!-- This flow is started from within the test case to avoid it consuming 
        messages when testing the message requester. -->
    <flow name="receiveFromJabber">

        <xmpp:inbound-endpoint type="CHAT"
            from="${conversationPartner}" exchange-pattern="one-way" />

        <test:component />
    </flow>

</mule>
