<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/3.0.0 http://maven.apache.org/maven-v3_0_0.xsd">
    <extend>${basedir}/../project.xml</extend>
    <pomVersion>3</pomVersion>
    <artifactId>mule-glue-provider</artifactId>
    <name>Mule Glue Provider</name>
    <description>A Mule provider for Soap Connectivity using Glue.</description>
    <shortDescription>glue</shortDescription>
    <url>http://www.muleumo.org/docs/modules/mule-glue-provider/</url>
    <dependencies>
        <dependency>
            <artifactId>glue</artifactId>
            <groupId>glue</groupId>
            <version>${glue_version}</version>
            <properties>
                <!-- cannot ship Glue jar due to license restrictions -->
                <ignore>true</ignore>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-soap-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-soap-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <!-- needed by the Glue client calls -->
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-http-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-http-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-extras-client</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-extras-client/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <id>commons-httpclient</id>
            <version>${commons_httpclient_version}</version>
            <url>http://jakarta.apache.org/commons/httpclient/index.html</url>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <id>commons-codec</id>
            <version>${commons_codec_version}</version>
            <url>http://jakarta.apache.org/commons/codec/index.html</url>
            <properties>
                <war.bundle.jar>true</war.bundle.jar>
            </properties>
        </dependency>
        <dependency>
            <groupId>mule</groupId>
            <artifactId>mule-tcp-provider</artifactId>
            <version>${pom.currentVersion}</version>
            <url>http://muleumo.org/docs/modules/mule-tcp-provider/</url>
            <properties>
                <mule.core.jar>true</mule.core.jar>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
   </dependencies>
</project>
