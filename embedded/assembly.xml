<!--
Assembly descriptor for the composite Mule library (jar).
-->
<assembly>
    <id>embedded</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/dependency</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>META-INF</outputDirectory>
            <includes>
                <include>spring.schemas</include>
                <include>spring.handlers</include>
                <include>mule.custom-property-editors</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>META-INF/services/org/mule/config</outputDirectory>
            <includes>
                <include>registry-bootstrap.properties</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
